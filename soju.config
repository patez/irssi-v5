# soju.config
# Soju IRC bouncer configuration.
# Mount this file read-only into the soju container.

listen irc://0.0.0.0:6667
listen unix+admin:///soju/soju.sock

db sqlite3 /var/lib/soju/soju.db

# Log messages to disk per-user (optional â€” comment out to disable)
# log /var/lib/soju/logs/{username}/{network}

# Message history to replay on reconnect
message-store db

# Titles shown in IRC clients
title "IRC via soju"
